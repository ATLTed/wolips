<?xml version="1.0"?>

<!-- ======================================================== -->
<!--                 WOLips Ant file.                         -->
<!-- ======================================================== -->
<project name="woproject-wolips-targetbuilder" default="java" basedir=".">
	<property file="build.properties" />
    <property file="${user.home}/build.properties" />
    <property file="default.properties" />
    <property file="src/wolips/plugin.properties"/>
    <property environment="env"/>
    <property name="output" value="output"/>
    <property name="next.root" value="${env.NEXT_ROOT}"/>
    
    
    <!-- ============================================= -->
    <!-- Derived Properties.                           -->
    <!-- ============================================= -->
    <property name="build" value="${output}/build"/>
    <property name="wolips.targetbuilder.name" value="org.objectstyle.wolips.targetbuilder_${WOLips.version}"/>
    <property name="wolips.targetbuilder.dist" value="${dist.base}/${wolips.targetbuilder.name}"/>
    <!-- main distribution. -->
    <property name="dist" value="${dist.base}/${project.name}-${project.version}"/>

    <!-- ============================================= -->
    <!-- Define CLASSPATH settings.                    -->
    <!-- ============================================= -->
    <target name="defineClasspath">
        <condition property="next.root" value="/System">
            <and>
                <os family="mac" />
                <os family="unix" />
            </and>
        </condition>
        <path id="classpath">
            <fileset dir="${ant.home}/lib">
                <include name="ant.jar"/>
            </fileset>
            <fileset dir="lib">
                <include name="*.jar"/>
	            <include name="eclipse/**/*.jar"/>
            </fileset>
	    <fileset dir="dist/org.objectstyle.wolips_${WOLips.version}">
			<include name="**/wolips.jar"/>
	    </fileset>
            <fileset dir="${next.root}/Library/Frameworks">
                <include name="JavaFoundation.framework/Resources/Java/*.jar"/>
            </fileset>
             <!-- Depends on WOProject core. -->
            <pathelement path="${build}/main"/>
        </path>
    </target>

    <target name="java" depends="prepare">
        <javac srcdir="src/wolips-targetbuilder/java"
                destdir="${build}/wolips-targetbuilder"
                deprecation="${compile.deprecation}"
                debug="${compile.debug}"
                optimize="${compile.optimize}">
            <classpath refid="classpath"/>
        </javac>
         
        <jar jarfile="${wolips.targetbuilder.dist}/lib/wolips-targetbuilder.jar">
            <fileset dir="${build}/wolips-targetbuilder"/>
            <fileset dir="src/wolips-targetbuilder/java">
          	    <include name="**/*.properties"/>
             </fileset>         
            <metainf dir="doc">
                <include name="LICENSE*"/>
            </metainf>
        </jar>
        
    </target>

    <target name="dist" depends="prepare,java,doc,api">
         <!-- Copy source code -->
         <copy todir="${wolips.targetbuilder.dist}/src">
             <fileset dir="src/wolips-targetbuilder/java"/>
         </copy>
         
         <copy todir="${wolips.targetbuilder.dist}">
             <fileset dir="src/wolips-targetbuilder">
             	<exclude name="**/java/**"/>
             	<exclude name="**/lib/**"/>
             	<exclude name="**/xdocs/**"/>
             	<exclude name="**/docs/**"/>
             	<exclude name=".project"/>
             	<exclude name=".classpath"/>
             </fileset>
         </copy>
         
    </target>
         
         
         
    <!-- ============================================= -->
    <!-- Sets up build and distribution directories.   -->
    <!-- ============================================= -->
    <target name="prepare" depends="defineClasspath">
        <mkdir dir="${build}/wolips-targetbuilder"/>
        <mkdir dir="${wolips.targetbuilder.dist}/lib"/>
        <mkdir dir="${wolips.targetbuilder.dist}/doc/api"/>
    </target>


    <!-- ============================================= -->
    <!-- Deletes temporary files.                      -->
    <!-- ============================================= -->
    <target name="clean">
        <delete dir="${build}/wolips-targetbuilder"/>
        <delete dir="${wolips.targetbuilder.dist}"/>
    </target>
    
    
    <!-- ============================================= -->
    <!-- Deploys WOLips web site files in a local      -->
    <!-- directory.                                    -->
    <!-- ============================================= -->
    <target name="deploy-web" depends="prepare,doc,api" if="deploy.web">
         <mkdir dir="${deploy.web}/woproject"/>

         <!-- copy all but HTML -->
         <copy todir="${deploy.web}/woproject">
             <fileset dir="${wolips.dist}/doc">
             	<exclude name="**/*.html"/>
             </fileset>
         </copy>

         <!-- do replacement in HTML files -->
         <copy todir="${deploy.web}/woproject" overwrite="true">
             <fileset dir="${wolips.targetbuilder.dist}/doc">
             	<include name="**/*.html"/>
             </fileset>

             <filterset begintoken="!--" endtoken="--">
				<filter token="SFLOGO" value="${sf.logo}"/>
			 </filterset>
         </copy>
    </target>
    
    
    <!-- ========================================== -->
    <!-- Builds API documenatation.                 -->
    <!-- ========================================== -->
    <target name="api" depends="prepare">
        <copy todir="${wolips.targetbuilder.dist}/doc">
            <fileset dir="doc">
                <include name="**/LICENSE*"/>
            </fileset>
        </copy>

        <javadoc   packagenames="org.objectstyle.wolips.targetbuilder.*"
                   defaultexcludes="yes"
                   destdir="${wolips.targetbuilder.dist}/doc/api"
                   author="true"
                   version="true"
                   use="true"
                   windowtitle="WOLips API">

        <classpath refid="classpath"/>
        <sourcepath>
            <pathelement path="src/wolips-targetbuilder/java"/>
	    <pathelement path="src/wolips/java"/>
        </sourcepath>
        <doctitle><![CDATA[<h2>WOLips API Documentation</h2>]]></doctitle>
        <link href="http://developer.java.sun.com/developer/products/xml/docs/api/"/>
        </javadoc>
    </target>
    
    
    <target name="doc" depends="prepare">
        <!-- copy all licenses inclusing ours -->
        <copy todir="${wolips.targetbuilder.dist}/doc">
            <fileset dir="doc">
               <include name="LICENSE*"/>
            </fileset>
        </copy>

        <taskdef name="anakia" classname="org.apache.velocity.anakia.AnakiaTask">
            <classpath refid="classpath"/>
        </taskdef>

        <!-- Build site in WOProject site directory -->
        <anakia basedir="src/wolips-targetbuilder/xdocs" destdir="${dist}/doc"
             extension=".html" style="woproject.vsl"
             projectFile="../../../xdocs/stylesheets/project.xml"
             excludes="**/stylesheets/**"
             includes="**/*.xml"
             lastModifiedCheck="true"
             templatePath="xdocs/stylesheets">
        </anakia>
        
       <!-- Build site in Plugin docs directory -->
        <anakia basedir="src/wolips-targetbuilder/xdocs/wolips-targetbuilder" destdir="${wolips.targetbuilder.dist}/doc"
             extension=".html" style="wolips-targetbuilder.vsl"
             excludes="**/stylesheets/**"
             includes="**/*.xml"
             lastModifiedCheck="true"
             templatePath="src/wolips-targetbuilder/xdocs/stylesheets">
        </anakia>

        <!-- copy images -->
        <copy todir="${dist}/doc/images/wolips-targetbuilder" filtering="no">
            <fileset dir="src/wolips-targetbuilder/xdocs/images">
                <include name="**/*.gif"/>
                <include name="**/*.jpeg"/>
                <include name="**/*.jpg"/>
                <include name="**/*.css"/>
            </fileset>
        </copy>
        <copy todir="${wolips.targetbuilder.dist}/doc/images/wolips-targetbuilder" filtering="no">
            <fileset dir="src/wolips-targetbuilder/xdocs/images">
                <include name="**/*.gif"/>
                <include name="**/*.jpeg"/>
                <include name="**/*.jpg"/>
                <include name="**/*.css"/>
            </fileset>
        </copy>
    </target>
</project>
