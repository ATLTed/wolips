<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.objectstyle.wolips.wizards"
   name="WOLips Wizards"
   version="1.0.6"
   provider-name="objectstyle.org">

   <runtime>
      <library name="lib/wolips-wizards.jar">
      </library>
   </runtime>
   <requires>
      <import plugin="org.eclipse.jdt.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.objectstyle.wolips.templateengine"/>
      <import plugin="org.objectstyle.wolips.tests.core"/>
      <import plugin="org.eclipse.ui.workbench"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.jdt.core"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.objectstyle.wolips.variables"/>
      <import plugin="org.objectstyle.wolips.datasets"/>
      <import plugin="org.objectstyle.wolips.commons"/>
      <import plugin="org.objectstyle.wolips.workbenchutilities"/>
      <import plugin="org.objectstyle.wolips.ant"/>
      <import plugin="org.eclipse.jface.text"/>
   </requires>


<!-- =================================================================================== -->
<!-- Extension: Project Wizards                                                          -->
<!-- =================================================================================== -->
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            name="WOLips WO 5.1 and 5.2"
            id="org.objectstyle.wolips.wizards">
      </category>
      <wizard
            name="WOComponent"
            icon="icons/wobuilder/wocomponent_wiz.gif"
            category="org.objectstyle.wolips.wizards"
            class="org.objectstyle.wolips.wizards.WOComponentCreationWizard"
            id="org.objectstyle.wolips.wizards.new.wo.5.1.component">
         <description>
         </description>
         <selection
               class="org.eclipse.core.resources.IResource">
         </selection>
      </wizard>
      <wizard
            name="WOApplication"
            icon="icons/woproject/woapplication_wiz.gif"
            category="org.objectstyle.wolips.wizards"
            class="org.objectstyle.wolips.wizards.WOApplicationWizard"
            project="true"
            id="org.objectstyle.wolips.wizards.new.wo.5.1.application">
         <description>
         </description>
      </wizard>
      <wizard
            name="D2WApplication"
            icon="icons/woproject/d2wapplication_wiz.gif"
            category="org.objectstyle.wolips.wizards"
            class="org.objectstyle.wolips.wizards.D2WApplicationWizard"
            project="true"
            id="org.objectstyle.wolips.wizards.new.wo.5.1.d2wapplication">
         <description>
         </description>
      </wizard>
      <wizard
            name="WOFramework"
            icon="icons/woproject/woframework_wiz.gif"
            category="org.objectstyle.wolips.wizards"
            class="org.objectstyle.wolips.wizards.WOFrameworkWizard"
            project="true"
            id="org.objectstyle.wolips.wizards.new.wo.5.1.framework">
         <description>
         </description>
      </wizard>
      <wizard
            name="Jar Project"
            icon="icons/woproject/jar_project_wiz.gif"
            category="org.objectstyle.wolips.wizards"
            class="org.objectstyle.wolips.wizards.JarProjectWizard"
            project="true"
            id="org.objectstyle.wolips.wizards.new.wo.5.1.jarproject">
         <description>
         </description>
      </wizard>
      <wizard
            name="Subproject"
            icon="icons/woproject/wosubproject_wiz.gif"
            category="org.objectstyle.wolips.wizards"
            class="org.objectstyle.wolips.wizards.WOSubprojectCreationWizard"
            id="org.objectstyle.wolips.wizards.new.wo.5.1.subproject">
         <description>
         </description>
         <selection
               class="org.eclipse.core.resources.IResource">
         </selection>
      </wizard>
      <wizard
            name="EOModel"
            icon="icons/woproject/eomodel_wiz.gif"
            category="org.objectstyle.wolips.wizards"
            class="org.objectstyle.wolips.wizards.EOModelCreationWizard"
            id="org.objectstyle.wolips.wizards.new.wo.5.1.eomodel">
         <description>
         </description>
         <selection
               class="org.eclipse.core.resources.IResource">
         </selection>
      </wizard>
   </extension>
<!-- =================================================================================== -->
<!-- Extension: Action set in the perspective                                            -->
<!-- =================================================================================== -->
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="WOLips Wizards"
            description="WOLips Wizards"
            visible="false"
            id="org.objectstyle.wolips.wizards.ElementCreationActionSet">
         <action
               label="EOModel"
               icon="icons/woproject/eomodel_wiz.gif"
               class="org.objectstyle.wolips.wizards.actions.OpenEOModelWizard"
               tooltip="Opens the EOModel wizard"
               toolbarPath="Normal/WOLipsWizards"
               id="org.objectstyle.wolips.wizards.actions.OpenEOModelWizard">
         </action>
         <action
               label="WOComponent"
               icon="icons/wobuilder/wocomponent_wiz.gif"
               class="org.objectstyle.wolips.wizards.actions.OpenWOComponentWizard"
               tooltip="Opens the WOComponent wizard"
               toolbarPath="Normal/WOLipsWizards"
               id="org.objectstyle.wolips.wizards.actions.OpenWOComponentWizard">
         </action>
         <action
               label="WOSubproject"
               icon="icons/woproject/wosubproject_wiz.gif"
               class="org.objectstyle.wolips.wizards.actions.OpenWOSubprojectCreationWizard"
               tooltip="Opens the WOSubproject wizard"
               toolbarPath="Normal/WOLipsWizards"
               id="org.objectstyle.wolips.wizards.actions.OpenWOSubprojectCreationWizard">
         </action>
         <action
               label="Jar Project"
               icon="icons/woproject/jar_project_wiz.gif"
               class="org.objectstyle.wolips.wizards.actions.OpenJarProjectWizard"
               tooltip="Opens the Jar Project wizard"
               toolbarPath="Normal/WOLipsWizards"
               id="org.objectstyle.wolips.wizards.actions.OpenJarProjectWizard">
         </action>
         <action
               label="WOFramework"
               icon="icons/woproject/woframework_wiz.gif"
               class="org.objectstyle.wolips.wizards.actions.OpenWOFrameworkWizard"
               tooltip="Opens the WOFramework wizard"
               toolbarPath="Normal/WOLipsWizards"
               id="org.objectstyle.wolips.wizards.actions.OpenWOFrameworkWizard">
         </action>
         <action
               label="D2WApplication"
               icon="icons/woproject/d2wapplication_wiz.gif"
               class="org.objectstyle.wolips.wizards.actions.OpenD2WApplicationWizard"
               tooltip="Opens the D2WApplication wizard"
               toolbarPath="Normal/WOLipsWizards"
               id="org.objectstyle.wolips.wizards.actions.OpenD2WApplicationWizard">
         </action>
         <action
               label="WOApplication"
               icon="icons/woproject/woapplication_wiz.gif"
               class="org.objectstyle.wolips.wizards.actions.OpenWOApplicationWizard"
               tooltip="Opens the WOApplication wizard"
               toolbarPath="Normal/WOLipsWizards"
               id="org.objectstyle.wolips.wizards.actions.OpenWOApplicationWizard">
         </action>
      </actionSet>
   </extension>
<!-- =================================================================================== -->
<!-- Extension: Popup menus                                                              -->
<!-- =================================================================================== -->
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.core.resources.IResource"
            adaptable="true"
            nameFilter="build.xml"
            id="org.objectstyle.wolips.wizards.actions.UpgradeBuildXML">
         <action
               label="Upgrade to 1.1.0"
               icon="icons/action/ant_buildfile.gif"
               class="org.objectstyle.wolips.wizards.actions.UpgradeBuildXML"
               menubarPath="org.objectstyle.wolips.ui.ResourceContributions/group4"
               enablesFor="1"
               id="org.objectstyle.wolips.wizards.actions.UpgradeBuildXML">
         </action>
      </objectContribution>
      <objectContribution
            objectClass="org.eclipse.core.resources.IProject"
            adaptable="true"
            id="org.objectstyle.wolips.wizards.actions.UpgradeAllBuildXML">
         <action
               label="Upgrade build.xml to 1.1.0"
               icon="icons/action/ant_buildfile.gif"
               class="org.objectstyle.wolips.wizards.actions.UpgradeAllBuildXML"
               menubarPath="org.objectstyle.wolips.ui.ResourceContributions/group4"
               id="org.objectstyle.wolips.wizards.actions.UpgradeAllBuildXML">
         </action>
      </objectContribution>
   </extension>
</plugin>
