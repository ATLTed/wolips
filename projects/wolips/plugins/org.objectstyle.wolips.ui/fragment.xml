<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<fragment
   id="org.objectstyle.wolips.ui"
   name="%WOLips.ui.fragmentName"
   version="1.0.6"
   provider-name="%WOLips.providerName"
   plugin-id="org.objectstyle.wolips"
   plugin-version="1.0.6"
   match="compatible">

   <runtime>
      <library name="lib/wolips-ui.jar">
         <packages prefixes="org.objectstyle.wolips.ui"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.jdt.ui"/>
      <import plugin="org.eclipse.search"/>
      <import plugin="org.eclipse.ui.console"/>
      <import plugin="org.eclipse.ui.workbench.texteditor"/>
      <import plugin="org.eclipse.ui.editors"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.core.runtime.compatibility"/>
   </requires>


<!-- =================================================================================== -->
<!-- Extension: Project actions                                                          -->
<!-- =================================================================================== -->
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            objectClass="org.eclipse.core.resources.IProject"
            id="org.objectstyle.wolips.core.actions">
         <filter
               name="nature"
               value="org.eclipse.jdt.core.javanature">
         </filter>
         <menu
               label="&amp;WOLips"
               path="additions"
               id="org.objectstyle.wolips">
            <separator
                  name="project">
            </separator>
            <separator
                  name="woframeworks">
            </separator>
         </menu>
         <action
               label="%UpdatePB.Project"
               class="org.objectstyle.wolips.ui.actions.PBAction"
               menubarPath="org.objectstyle.wolips/project"
               id="%UpdatePB.Project.ID">
         </action>
         <action
               label="%WOOtherFramework.Add"
               class="org.objectstyle.wolips.ui.actions.WOFrameworkAction"
               menubarPath="org.objectstyle.wolips/woframeworks"
               id="%WOOtherFramework.Add.ID">
         </action>
         <action
               label="%WOUserHomeFramework.Add"
               class="org.objectstyle.wolips.ui.actions.WOFrameworkAction"
               menubarPath="org.objectstyle.wolips/woframeworks"
               id="%WOUserHomeFramework.Add.ID">
         </action>
         <action
               label="%ProjectWonderHomeFramework.Add"
               class="org.objectstyle.wolips.ui.actions.WOFrameworkAction"
               menubarPath="org.objectstyle.wolips/woframeworks"
               id="%ProjectWonderFramework.Add.ID">
         </action>
         <action
               label="%WOLocalFramework.Add"
               class="org.objectstyle.wolips.ui.actions.WOFrameworkAction"
               menubarPath="org.objectstyle.wolips/woframeworks"
               id="%WOLocalFramework.Add.ID">
         </action>
         <action
               label="%WOSystemFramework.Add"
               class="org.objectstyle.wolips.ui.actions.WOFrameworkAction"
               menubarPath="org.objectstyle.wolips/woframeworks"
               id="%WOSystemFramework.Add.ID">
         </action>
      </objectContribution>
<!-- =================================================================================== -->
<!-- Extension: File actions                                                             -->
<!-- =================================================================================== -->
      <objectContribution
            adaptable="true"
            objectClass="org.eclipse.jdt.core.ICompilationUnit"
            nameFilter="*.java"
            id="org.objectstyle.wolips.ui.actions.OpenComponentAction">
         <action
               label="%WOLips.PopupMenu.OpenComponentAction"
               class="org.objectstyle.wolips.ui.actions.OpenComponentAction"
               menubarPath="additions"
               enablesFor="1"
               id="org.objectstyle.wolips.ui.actions.OpenComponentAction">
         </action>
      </objectContribution>
      <objectContribution
            adaptable="true"
            objectClass="org.eclipse.core.resources.IFile"
            nameFilter="*.wod"
            id="org.objectstyle.wolips.ui.actions.OpenSourceAction">
         <action
               label="%WOLips.PopupMenu.OpenSourceAction"
               class="org.objectstyle.wolips.ui.actions.OpenSourceAction"
               menubarPath="additions"
               enablesFor="1"
               id="org.objectstyle.wolips.ui.actions.OpenSourceAction">
         </action>
      </objectContribution>
      <objectContribution
            adaptable="true"
            objectClass="org.eclipse.core.resources.IContainer"
            nameFilter="*.wo"
            id="org.objectstyle.wolips.ui.actions.OpenSourceAction">
         <action
               label="%WOLips.PopupMenu.OpenSourceAction"
               class="org.objectstyle.wolips.ui.actions.OpenSourceAction"
               menubarPath="additions"
               enablesFor="1"
               id="org.objectstyle.wolips.ui.actions.OpenSourceAction">
         </action>
      </objectContribution>
      <objectContribution
            adaptable="true"
            objectClass="org.eclipse.core.resources.IContainer"
            nameFilter="*.eomodeld"
            id="org.objectstyle.wolips.ui.actions.OpenEOModelIndexAction">
         <action
               label="%WOLips.PopupMenu.OpenEOModelIndexAction"
               class="org.objectstyle.wolips.ui.actions.OpenEOModelIndexAction"
               menubarPath="additions"
               enablesFor="1"
               id="org.objectstyle.wolips.ui.actions.OpenEOModelIndexAction">
         </action>
      </objectContribution>
   </extension>
<!-- =================================================================================== -->
<!-- Extension: Editors                                                                  -->
<!-- =================================================================================== -->
   <extension
         id="org.objectstyle.wolips.editors"
         point="org.eclipse.ui.editors">
      <editor
            default="true"
            name="WOBuilder"
            extensions="api,wod,woo"
            icon="icons/wobuilder/webobjects_builder.gif"
            id="org.objectstyle.wolips.external.wod.editor"
            launcher="org.objectstyle.wolips.ui.editor.OpenSystemEditor">
      </editor>
      <editor
            default="false"
            name="WOComponent TextEditor"
            extensions="api,wod,woo"
            icon="icons/wobuilder/webobjects_builder.gif"
            class="org.eclipse.ui.editors.text.TextEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            id="org.objectstyle.wolips.internal.wod.editor">
      </editor>
      <editor
            default="false"
            name="HTML TextEditor"
            extensions="html"
            icon="icons/wobuilder/webobjects_builder.gif"
            class="org.eclipse.ui.editors.text.TextEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            id="org.objectstyle.wolips.internal.html.editor">
      </editor>
      <editor
            default="true"
            name="EOModeler"
            extensions="eomodeld"
            icon="icons/eomodeler/webobjects_eomodeler.gif"
            id="org.objectstyle.wolips.external.eomodeld.editor"
            launcher="org.objectstyle.wolips.ui.editor.OpenSystemEditor">
      </editor>
      <editor
            default="false"
            name="ProjectBuilderWO"
            extensions="project"
            icon="icons/projectbuilder/projectbuilderwo.gif"
            id="org.objectstyle.wolips.external.projectbuilder.wo"
            launcher="org.objectstyle.wolips.ui.editor.OpenSystemEditor">
      </editor>
      <editor
            default="true"
            name="RuleEditor"
            extensions="d2wmodel"
            icon="icons/eomodeler/webobjects_eomodeler.gif"
            id="org.objectstyle.wolips.external.d2w.model"
            launcher="org.objectstyle.wolips.ui.editor.OpenSystemEditor">
      </editor>
      <editor
            default="true"
            name="GraphicEditor"
            extensions="icns"
            icon="icons/files/icns.gif"
            id="org.objectstyle.wolips.ui.icns"
            launcher="org.objectstyle.wolips.ui.editor.OpenSystemEditor">
      </editor>
      <editor
            name="MakefileEditor"
            extensions="Makefile,postamble,preamble"
            icon="icons/files/text_file.gif"
            class="org.eclipse.ui.editors.text.TextEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            id="org.objectstyle.wolips.ui.DefaultMakefileEditor">
      </editor>
      <editor
            name="PropertyListEditor"
            extensions="plist"
            icon="icons/files/text_file.gif"
            class="org.eclipse.ui.editors.text.TextEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            id="org.objectstyle.wolips.ui.DefaultPropertyListEditor">
      </editor>
      <editor
            name="AntIncludesFileEditor"
            extensions="home,wosystemroot,wolocalroot"
            icon="icons/files/ant_buildfile.gif"
            class="org.eclipse.ui.editors.text.TextEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            id="org.objectstyle.wolips.ui.DefaultAntIncludesFileEditor">
      </editor>
   </extension>
<!-- =================================================================================== -->
<!-- Extension: Perspective                                                              -->
<!-- =================================================================================== -->
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="WOLips"
            icon="icons/wolips/WOLips-icon.gif"
            class="org.objectstyle.wolips.ui.view.PerspectiveFactory"
            id="org.objectstyle.wolips.ui.Perspective">
      </perspective>
   </extension>
<!-- =================================================================================== -->
<!-- Extension: View                                                                     -->
<!-- =================================================================================== -->
   <extension
         point="org.eclipse.ui.views">
      <category
            name="%WOLips.View.Category.Name"
            id="org.objectstyle.wolips.ui">
      </category>
      <view
            name="Related"
            icon="icons/wolips/WOLips-icon.gif"
            class="org.objectstyle.wolips.ui.view.RelatedView"
            id="org.objectstyle.wolips.ui.view.RelatedView">
      </view>
   </extension>
<!-- =================================================================================== -->
<!-- Extension: Preferences                                                              -->
<!-- =================================================================================== -->
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="%WOLips.preferences.viewName"
            class="org.objectstyle.wolips.ui.preferences.PreferencesPage"
            id="org.objectstyle.wolips.preferences.PreferencesPage">
      </page>
      <page
            name="%WOLips.preferences.build.viewName"
            category="org.objectstyle.wolips.preferences.PreferencesPage"
            class="org.objectstyle.wolips.ui.preferences.BuildPreferencesPage"
            id="org.objectstyle.wolips.preferences.BuildPreferencesPage">
      </page>
      <page
            name="%WOLips.preferences.launch.viewName"
            category="org.objectstyle.wolips.preferences.PreferencesPage"
            class="org.objectstyle.wolips.ui.preferences.LaunchPreferencesPage"
            id="org.objectstyle.wolips.preferences.LaunchPreferencesPage">
      </page>
      <page
            name="%WOLips.preferences.projectbuilder.viewName"
            category="org.objectstyle.wolips.preferences.PreferencesPage"
            class="org.objectstyle.wolips.ui.preferences.ProjectBuilderPreferencesPage"
            id="org.objectstyle.wolips.preferences.ProjectBuilderPreferencesPage">
      </page>
      <page
            name="%WOLips.preferences.projectbuilder.woappresourcesincludeviewName"
            category="org.objectstyle.wolips.preferences.PreferencesPage/org.objectstyle.wolips.preferences.ProjectBuilderPreferencesPage"
            class="org.objectstyle.wolips.ui.preferences.ProjectBuilderWOAppResourcesIncludePreferencesPage"
            id="org.objectstyle.wolips.preferences.ProjectBuilderWOAppResourcesIncludePreferencesPage">
      </page>
      <page
            name="%WOLips.preferences.projectbuilder.woappresourcesexcludeviewName"
            category="org.objectstyle.wolips.preferences.PreferencesPage/org.objectstyle.wolips.preferences.ProjectBuilderPreferencesPage"
            class="org.objectstyle.wolips.ui.preferences.ProjectBuilderWOAppResourcesExcludePreferencesPage"
            id="org.objectstyle.wolips.ui.preferences.ProjectBuilderWOAppResourcesExcludePreferencesPage">
      </page>
      <page
            name="%WOLips.preferences.projectbuilder.classesincludeviewName"
            category="org.objectstyle.wolips.preferences.PreferencesPage/org.objectstyle.wolips.preferences.ProjectBuilderPreferencesPage"
            class="org.objectstyle.wolips.ui.preferences.ProjectBuilderClassesIncludePreferencesPage"
            id="org.objectstyle.wolips.ui.preferences.ProjectBuilderClassesIncludePreferencesPage">
      </page>
      <page
            name="%WOLips.preferences.projectbuilder.classesexcludeviewName"
            category="org.objectstyle.wolips.preferences.PreferencesPage/org.objectstyle.wolips.preferences.ProjectBuilderPreferencesPage"
            class="org.objectstyle.wolips.ui.preferences.ProjectBuilderClassesExcludePreferencesPage"
            id="org.objectstyle.wolips.ui.preferences.ProjectBuilderClassesExcludePreferencesPage">
      </page>
   </extension>
<!-- =================================================================================== -->
<!-- Extension: Decorators                                                               -->
<!-- =================================================================================== -->
   <extension
         point="org.eclipse.ui.decorators">
      <decorator
            objectClass="org.eclipse.core.resources.IFolder"
            label="WebObjects"
            class="org.objectstyle.wolips.ui.labeldecorator.WOLabelDecorator"
            state="true"
            id="org.objectstyle.wolips.ui.labeldecorator.WOLabelDecorator">
      </decorator>
   </extension>
<!-- =================================================================================== -->
<!-- Extension: Action set in the perspective                                            -->
<!-- =================================================================================== -->
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="%ElementCreationActionSet.label"
            description="%ElementCreationActionSet.description"
            visible="false"
            id="org.objectstyle.wolips.ui.BuildActionSet">
         <action
               label="%EnableWOBuild.label"
               icon="icons/wobuild/enable_build.gif"
               class="org.objectstyle.wolips.ui.actions.WOBuildEnableAction"
               tooltip="%EnableWOBuild.tooltip"
               toolbarPath="Normal/WOLipsWizards"
               id="WOBuild.Enable.ID">
         </action>
         <action
               label="%DisableWOBuild.label"
               icon="icons/wobuild/disable_build.gif"
               class="org.objectstyle.wolips.ui.actions.WOBuildDisableAction"
               tooltip="%DisableWOBuild.tooltip"
               toolbarPath="Normal/WOLipsWizards"
               id="WOBuild.Disable.ID">
         </action>
      </actionSet>
   </extension>
<!-- =================================================================================== -->
<!-- Extension: Classpath container page                                                 -->
<!-- =================================================================================== -->
   <extension
         point="org.eclipse.jdt.ui.classpathContainerPage">
      <classpathContainerPage
            name="WO Frameworks"
            class="org.objectstyle.wolips.ui.classpath.WOClassPathContainerPage"
            id="org.objectstyle.wolips.WO_CLASSPATH">
      </classpathContainerPage>
   </extension>
<!-- =========================================================================== -->
<!-- Filter Support                                                              -->
<!-- =========================================================================== -->
   <extension
         point="org.eclipse.jdt.ui.javaElementFilters">
<!-- Package Explorer -->
      <filter
            viewId="org.eclipse.jdt.ui.PackageExplorer"
            enabled="true"
            name="%HideMakeFiles.label"
            description="%HideMakeFiles.description"
            pattern="Makefil*">
      </filter>
      <filter
            viewId="org.eclipse.jdt.ui.PackageExplorer"
            enabled="true"
            name="%HideAntClasspathIncludeFiles.label"
            description="%HideAntClasspathIncludeFiles.description"
            pattern="ant.classpaths.*">
      </filter>
      <filter
            viewId="org.eclipse.jdt.ui.PackageExplorer"
            enabled="true"
            name="%HideAntFrameworksIncludeFiles.label"
            description="%HideAntFrameworksIncludeFiles.description"
            pattern="ant.frameworks.*">
      </filter>
      <filter
            viewId="org.eclipse.jdt.ui.PackageExplorer"
            enabled="true"
            name="%HidePBProjectFiles.label"
            description="%HidePBProjectFiles.description"
            pattern="PB.project">
      </filter>
      <filter
            viewId="org.eclipse.jdt.ui.PackageExplorer"
            enabled="false"
            name="%HideWOApiFiles.label"
            description="%HideWOApiFiles.description"
            pattern="*.api">
      </filter>
      <filter
            viewId="org.eclipse.jdt.ui.PackageExplorer"
            enabled="false"
            name="%HideWooFiles.label"
            description="%HideWooFiles.description"
            pattern="*.woo">
      </filter>
      <filter
            viewId="org.eclipse.jdt.ui.PackageExplorer"
            enabled="true"
            name="%HideWOAIconFiles.label"
            description="%HideWOAIconFiles.description"
            pattern="WOAfile.icns">
      </filter>
      <filter
            viewId="org.eclipse.jdt.ui.PackageExplorer"
            enabled="true"
            name="%HideCustomInfo.PlistFiles.label"
            description="%HideCustomInfo.PlistFiles.description"
            pattern="CustomInfo.Plist">
      </filter>
      <filter
            viewId="org.eclipse.jdt.ui.PackageExplorer"
            enabled="true"
            name="%HidePropertiesFiles.label"
            description="%HidePropertiesFiles.description"
            pattern="Properties">
      </filter>
      <filter
            viewId="org.eclipse.jdt.ui.PackageExplorer"
            enabled="true"
            name="%HideBuild.propertiesFiles.label"
            description="%HideBuild.propertiesFiles.description"
            pattern="build.properties">
      </filter>
      <filter
            viewId="org.eclipse.jdt.ui.PackageExplorer"
            enabled="true"
            name="%HideBuild.xmlFiles.label"
            description="%HideBuild.xmlFiles.description"
            pattern="build.xml">
      </filter>
   </extension>
</fragment>
