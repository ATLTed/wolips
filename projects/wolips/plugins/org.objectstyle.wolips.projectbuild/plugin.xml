<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.objectstyle.wolips"
   name="WOLips Project Build"
   version="1.0.6"
   provider-name="objectstyle.org"
   class="org.objectstyle.wolips.plugin.ProjectBuildPlugin">

   <runtime>
      <library name="lib/wolips-projectbuild.jar">
         <packages prefixes="org.objectstyle.wolips.projectbuild"/>
      </library>
   </runtime>
   <requires>
      <import plugin="org.objectstyle.wolips.cayenne"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.objectstyle.wolips.datasets"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.jdt.core"/>
      <import plugin="org.eclipse.jdt.launching"/>
      <import plugin="org.eclipse.debug.core"/>
      <import plugin="org.eclipse.ant.core"/>
      <import plugin="org.objectstyle.wolips.workbenchutilities"/>
      <import plugin="org.eclipse.ui.externaltools"/>
      <import plugin="org.eclipse.ant.ui"/>
      <import plugin="org.eclipse.core.variables"/>
      <import plugin="org.objectstyle.wolips.commons"/>
      <import plugin="org.objectstyle.wolips.preferences"/>
   </requires>


<!-- =================================================================================== -->
<!-- Extension: WOLips projectbuild problem marker                                       -->
<!-- =================================================================================== -->
   <extension
         id="projectbuild.taskmarker"
         name="WOLips Task Marker"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.taskmarker">
      </super>
   </extension>
   <extension
         id="projectbuild.marker"
         name="WOLips Build Marker"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
   </extension>
   <extension
         id="projectbuild.problem"
         name="WOLips Build Problem Marker"
         point="org.eclipse.core.resources.markers">
      <persistent
            value="true">
      </persistent>
      <super
            type="org.objectstyle.wolips.projectbuild.marker">
      </super>
   </extension>
   <extension
         id="projectbuild.duplicate"
         name="WOLips Build Duplicate Marker"
         point="org.eclipse.core.resources.markers">
      <persistent
            value="true">
      </persistent>
      <super
            type="org.objectstyle.wolips.projectbuild.marker">
      </super>
   </extension>
<!-- =================================================================================== -->
<!-- Extension: WOLips projectbuild property page                                                                      -->
<!-- =================================================================================== -->
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            adaptable="true"
            objectClass="org.eclipse.core.resources.IProject"
            name="WOLips build"
            class="org.objectstyle.wolips.projectbuild.natures.ProjectNaturePage"
            id="org.objectstyle.wolips.projectbuild.natures.ProjectNaturePage">
         <filter
               name="nature"
               value="org.eclipse.jdt.core.javanature">
         </filter>
      </page>
   </extension>
<!-- =================================================================================== -->
<!-- Extension: WOProject Builder                                                      -->
<!-- =================================================================================== -->
   <extension
         id="incrementalbuilder"
         name="WOLips Incremental Builder"
         point="org.eclipse.core.resources.builders">
      <builder>
         <run
               class="org.objectstyle.wolips.projectbuild.builder.WOIncrementalBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="antbuilder"
         name="WOLips Ant Builder"
         point="org.eclipse.core.resources.builders">
      <builder>
         <run
               class="org.objectstyle.wolips.projectbuild.builder.WOAntBuilder">
         </run>
      </builder>
   </extension>
<!-- =================================================================================== -->
<!-- Extension: Project Natures                                                          -->
<!-- =================================================================================== -->
   <extension
         id="incrementalframeworknature"
         name="org.objectstyle.wolips.projectbuild.WOIncrementalNature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.objectstyle.wolips.projectbuild.natures.IncrementalNature">
         </run>
      </runtime>
      <requires-nature
            id="org.eclipse.jdt.core.javanature">
      </requires-nature>
   </extension>
   <extension
         id="incrementalapplicationnature"
         name="org.objectstyle.wolips.projectbuild.WOIncrementalNature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.objectstyle.wolips.projectbuild.natures.IncrementalNature">
         </run>
      </runtime>
      <requires-nature
            id="org.eclipse.jdt.core.javanature">
      </requires-nature>
   </extension>
<!-- Simple nature that runs ant -->
   <extension
         id="antnature"
         name="org.objectstyle.wolips.projectbuild.wolipsantnature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.objectstyle.wolips.projectbuild.natures.AntNature">
         </run>
      </runtime>
      <requires-nature
            id="org.eclipse.jdt.core.javanature">
      </requires-nature>
   </extension>
   <extension
         id="antframeworknature"
         name="org.objectstyle.wolips.projectbuild.wolipsantnature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.objectstyle.wolips.projectbuild.natures.AntNature">
         </run>
      </runtime>
      <requires-nature
            id="org.eclipse.jdt.core.javanature">
      </requires-nature>
   </extension>
   <extension
         id="antapplicationnature"
         name="org.objectstyle.wolips.projectbuild.wolipsantnature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.objectstyle.wolips.projectbuild.natures.AntNature">
         </run>
      </runtime>
      <requires-nature
            id="org.eclipse.jdt.core.javanature">
      </requires-nature>
   </extension>

</plugin>
