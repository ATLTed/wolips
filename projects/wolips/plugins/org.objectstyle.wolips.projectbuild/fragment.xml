<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<fragment
   id="org.objectstyle.wolips.projectbuild"
   name="%WOLips.projectbuild.fragmentName"
   version="1.0.6"
   provider-name="%WOLips.providerName"
   plugin-id="org.objectstyle.wolips"
   plugin-version="1.0.6"
   match="compatible">

   <runtime>
      <library name="lib/wolips-projectbuild.jar">
         <packages prefixes="org.objectstyle.wolips.projectbuild"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.jdt.ui"/>
      <import plugin="org.objectstyle.wolips.cayenne"/>
   </requires>


<!-- =================================================================================== -->
<!-- Extension: WOLips projectbuild problem marker                                       -->
<!-- =================================================================================== -->
   <extension
         id="projectbuild.taskmarker"
         name="WOLips Task Marker"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.taskmarker">
      </super>
   </extension>
   <extension
         id="projectbuild.marker"
         name="WOLips Build Marker"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
   </extension>
   <extension
         id="projectbuild.problem"
         name="WOLips Build Problem Marker"
         point="org.eclipse.core.resources.markers">
      <persistent
            value="true">
      </persistent>
      <super
            type="org.objectstyle.wolips.projectbuild.marker">
      </super>
   </extension>
   <extension
         id="projectbuild.duplicate"
         name="WOLips Build Duplicate Marker"
         point="org.eclipse.core.resources.markers">
      <persistent
            value="true">
      </persistent>
      <super
            type="org.objectstyle.wolips.projectbuild.marker">
      </super>
   </extension>
<!-- =================================================================================== -->
<!-- Extension: WOLips projectbuild property page                                                                      -->
<!-- =================================================================================== -->
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            adaptable="true"
            objectClass="org.eclipse.core.resources.IProject"
            name="WOLips build"
            class="org.objectstyle.wolips.projectbuild.natures.ProjectNaturePage"
            id="org.objectstyle.wolips.projectbuild.natures.ProjectNaturePage">
         <filter
               name="nature"
               value="org.eclipse.jdt.core.javanature">
         </filter>
      </page>
   </extension>
<!-- =================================================================================== -->
<!-- Extension: WOGenerator                                                              -->
<!-- =================================================================================== -->
   <extension
         id="wogenerator"
         name="%WOGenerator.Name"
         point="org.eclipse.core.resources.builders">
      <builder>
         <run
               class="org.objectstyle.wolips.projectbuild.builder.WOGenerator">
         </run>
      </builder>
   </extension>
<!-- =================================================================================== -->
<!-- Extension: WOProject Builder                                                      -->
<!-- =================================================================================== -->
   <extension
         id="incrementalbuilder"
         name="%WOIncrementalProjectBuilderName"
         point="org.eclipse.core.resources.builders">
      <builder>
         <run
               class="org.objectstyle.wolips.projectbuild.builder.WOIncrementalBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="antbuilder"
         name="%WOAntBuilderName"
         point="org.eclipse.core.resources.builders">
      <builder>
         <run
               class="org.objectstyle.wolips.projectbuild.builder.WOAntBuilder">
         </run>
      </builder>
   </extension>
<!-- =================================================================================== -->
<!-- Extension: Project Natures                                                          -->
<!-- =================================================================================== -->
   <extension
         id="incrementalframeworknature"
         name="org.objectstyle.wolips.projectbuild.WOIncrementalNature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.objectstyle.wolips.projectbuild.natures.IncrementalNature">
         </run>
      </runtime>
      <requires-nature
            id="org.eclipse.jdt.core.javanature">
      </requires-nature>
   </extension>
   <extension
         id="incrementalapplicationnature"
         name="org.objectstyle.wolips.projectbuild.WOIncrementalNature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.objectstyle.wolips.projectbuild.natures.IncrementalNature">
         </run>
      </runtime>
      <requires-nature
            id="org.eclipse.jdt.core.javanature">
      </requires-nature>
   </extension>
<!-- Simple nature that runs ant -->
   <extension
         id="antnature"
         name="org.objectstyle.wolips.projectbuild.wolipsantnature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.objectstyle.wolips.projectbuild.natures.AntNature">
         </run>
      </runtime>
      <requires-nature
            id="org.eclipse.jdt.core.javanature">
      </requires-nature>
   </extension>
   <extension
         id="antframeworknature"
         name="org.objectstyle.wolips.projectbuild.wolipsantnature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.objectstyle.wolips.projectbuild.natures.AntNature">
         </run>
      </runtime>
      <requires-nature
            id="org.eclipse.jdt.core.javanature">
      </requires-nature>
   </extension>
   <extension
         id="antapplicationnature"
         name="org.objectstyle.wolips.projectbuild.wolipsantnature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.objectstyle.wolips.projectbuild.natures.AntNature">
         </run>
      </runtime>
      <requires-nature
            id="org.eclipse.jdt.core.javanature">
      </requires-nature>
   </extension>
</fragment>
