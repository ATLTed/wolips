<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.objectstyle.wolips.datasets"
   name="WOLips Data Sets Plug-in"
   version="1.0.6"
   provider-name="objectstyle.org"
   class="org.objectstyle.wolips.datasets.DataSetsPlugin">

   <runtime>
      <library name="lib/wolips-datasets.jar">
         <export name="*"/>
         <packages prefixes="org.objectstyle.wolips.datasets,org.objectstyle.wolips.datasets.internal,org.objectstyle.wolips.datasets.listener,org.objectstyle.wolips.datasets.pattern,org.objectstyle.wolips.datasets.project,org.objectstyle.wolips.datasets.resources"/>
      </library>
   </runtime>
   <requires>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.jdt.core"/>
      <import plugin="org.eclipse.jface"/>
      <import plugin="org.eclipse.ui.workbench"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.apache.ant"/>
      <import plugin="org.objectstyle.wolips.variables"/>
      <import plugin="org.objectstyle.wolips.woproject"/>
      <import plugin="org.objectstyle.wolips.workbenchutilities"/>
      <import plugin="org.objectstyle.wolips.tests.core"/>
      <import plugin="org.objectstyle.wolips.commons"/>
   </requires>

<!-- =================================================================================== -->
<!-- Extension: Adapters                                                                 -->
<!-- =================================================================================== -->
   <extension point="org.eclipse.core.runtime.adapters">
       <factory class="org.objectstyle.wolips.datasets.adaptable.IProjectAdapterFactory"
           adaptableType="org.eclipse.core.resources.IProject">
           <adapter type="org.objectstyle.wolips.datasets.adaptable.Project"/>
       </factory>
       <factory class="org.objectstyle.wolips.datasets.adaptable.IJavaProjectAdapterFactory"
           adaptableType="org.eclipse.jdt.core.IJavaProject">
           <adapter type="org.objectstyle.wolips.datasets.adaptable.JavaProject"/>
       </factory>
   </extension>

</plugin>
