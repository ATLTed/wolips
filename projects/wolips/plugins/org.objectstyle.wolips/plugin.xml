<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.objectstyle.wolips"
   name="%WOLips.pluginName"
   version="1.0.6"
   provider-name="%WOLips.providerName"
   class="org.objectstyle.wolips.core.plugin.WOLipsPlugin">

   <runtime>
      <library name="lib/wolips.jar">
         <export name="*"/>
         <packages prefixes="org.objectstyle.wolips.core"/>
      </library>
   </runtime>
   <requires>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.ant.core"/>
      <import plugin="org.eclipse.jdt.core"/>
      <import plugin="org.eclipse.jdt.launching"/>
      <import plugin="org.eclipse.debug.core"/>
      <import plugin="org.eclipse.debug.ui"/>
      <import plugin="org.apache.ant"/>
      <import plugin="org.eclipse.jface"/>
      <import plugin="org.objectstyle.wolips.woproject"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.osgi" export="true"/>
   </requires>


<!-- =================================================================================== -->
<!-- Extension: Startup                                                                  -->
<!-- =================================================================================== -->
   <extension
         point="org.eclipse.ui.startup">
   </extension>
<!-- =================================================================================== -->
<!-- Extension: Classpath container initializer                                          -->
<!-- =================================================================================== -->
   <extension
         point="org.eclipse.jdt.core.classpathContainerInitializer">
      <classpathContainerInitializer
            class="org.objectstyle.wolips.core.classpath.WOClasspathContainerInitializer"
            id="org.objectstyle.wolips.WO_CLASSPATH">
      </classpathContainerInitializer>
   </extension>

</plugin>
