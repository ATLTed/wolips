<?xml version="1.0"?>

<!-- ======================================================== -->
<!--                 WOLips Ant file.                         -->
<!--           Takes the WOLips version from the              -->
<!--           and populates it to all files refering it.     -->
<!-- ======================================================== -->
<project name="build-wolips-version" default="version" basedir=".">
    <target name="version">
    	<replace file="${basedir}/src/wolips/plugin.properties" token="${WOLips.previous.version}" value="${WOLips.version}"/>
    	<replace file="${basedir}/src/wolips/plugin.xml" token="${WOLips.previous.version}" value="${WOLips.version}"/>
    	<replace file="${basedir}/src/wolips/README.html" token="${WOLips.previous.version}" value="${WOLips.version}"/>
    	<replace file="${basedir}/src/wolips-feature/feature.properties" token="${WOLips.previous.version}" value="${WOLips.version}"/>
