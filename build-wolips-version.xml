    	<replace file="${basedir}/src/wolips-tests-feature/feature.properties" token="${WOLips.previous.version}" value="${WOLips.version}"/>
    	<replace file="${basedir}/src/wolips-tests-feature/feature.xml" token="${WOLips.previous.version}" value="${WOLips.version}"/>
    	<replace file="${basedir}/src/wolips-profiling-feature/feature.properties" token="${WOLips.previous.version}" value="${WOLips.version}"/>
    	<replace file="${basedir}/src/wolips-profiling-feature/feature.xml" token="${WOLips.previous.version}" value="${WOLips.version}"/>
    	<replace file="${basedir}/src/wolips-help/fragment.xml" token="${WOLips.previous.version}" value="${WOLips.version}"/>
    	<replace file="${basedir}/src/wolips-launching/fragment.xml" token="${WOLips.previous.version}" value="${WOLips.version}"/>
    	<replace file="${basedir}/src/wolips-profiling/plugin.xml" token="${WOLips.previous.version}" value="${WOLips.version}"/>
    	<replace file="${basedir}/src/wolips-profiling/plugin.properties" token="${WOLips.previous.version}" value="${WOLips.version}"/>
    	<replace file="${basedir}/src/wolips-devstudio/fragment.xml" token="${WOLips.previous.version}" value="${WOLips.version}"/>
    	<replace file="${basedir}/src/wolips-projectbuild/fragment.xml" token="${WOLips.previous.version}" value="${WOLips.version}"/>
    	<replace file="${basedir}/src/wolips-source/fragment.xml" token="${WOLips.previous.version}" value="${WOLips.version}"/>
    	<replace file="${basedir}/src/wolips-support/fragment.xml" token="${WOLips.previous.version}" value="${WOLips.version}"/>
    	<replace file="${basedir}/src/wolips-targetbuilder/plugin.properties" token="${WOLips.previous.version}" value="${WOLips.version}"/>
    	<replace file="${basedir}/src/wolips-targetbuilder/plugin.xml" token="${WOLips.previous.version}" value="${WOLips.version}"/>
        <replace file="${basedir}/src/wolips-wounit/fragment.xml" token="${WOLips.previous.version}" value="${WOLips.version}"/>
        <replace file="${basedir}/src/wolips-tests/plugin.xml" token="${WOLips.previous.version}" value="${WOLips.version}"/>
        <replace file="${basedir}/src/wolips-tests/scripts/test.properties" token="${WOLips.previous.version}" value="${WOLips.version}"/>
    	<replace file="${basedir}/src/wolips-ui/fragment.xml" token="${WOLips.previous.version}" value="${WOLips.version}"/>
    	<replace file="${basedir}/src/wolips-wizards/fragment.xml" token="${WOLips.previous.version}" value="${WOLips.version}"/>
    	<replace file="${basedir}/src/wolips-ant/plugin.properties" token="${WOLips.previous.version}" value="${WOLips.version}"/>
    	<replace file="${basedir}/src/wolips-ant/plugin.xml" token="${WOLips.previous.version}" value="${WOLips.version}"/>
