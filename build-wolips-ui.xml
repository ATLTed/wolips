<?xml version="1.0"?>

<!-- ======================================================== -->
<!--                 WOLips Ant file.                         -->
<!-- ======================================================== -->
<project name="woproject-wolips-ui" default="java" basedir=".">

    <!-- ============================================= -->
    <!-- Define CLASSPATH settings.                    -->
    <!-- ============================================= -->
    <target name="defineClasspath" if="wolips.build.ui">
        <path id="classpath">
            <fileset dir="${ant.home}/lib">
                <include name="ant.jar"/>
            </fileset>
            <fileset dir="lib">
                <include name="*.jar"/>
	            <include name="eclipse/**/*.jar"/>
            </fileset>
	    <fileset dir="${wolips.dist}">
			<include name="**/wolips.jar"/>
	    </fileset>
            <fileset dir="${wo.dir.library.frameworks}">
                <include name="JavaFoundation.framework/Resources/Java/*.jar"/>
            </fileset>
             <!-- Depends on WOProject core. -->
            <pathelement path="${build}/main"/>
        </path>
    </target>

    <target name="java" depends="prepare" if="wolips.build.ui">
        <javac srcdir="src/wolips-ui/java"
                destdir="${build}/wolips-ui"
                deprecation="${compile.deprecation}"
                debug="${compile.debug}"
                optimize="${compile.optimize}">
            <classpath refid="classpath"/>
        </javac>
         
        <jar jarfile="${wolips.ui.dist}/lib/wolips-ui.jar">
            <fileset dir="${build}/wolips-ui"/>
            <fileset dir="src/wolips-ui/java">
          	    <include name="**/*.properties"/>
             </fileset>         
             <fileset dir="src/wolips-ui/java">
          	    <include name="**/*.gif"/>
             </fileset>         
            <metainf dir="doc">
                <include name="LICENSE*"/>
            </metainf>
        </jar>
        
    </target>

    <target name="dist" depends="prepare,java,doc,api" if="wolips.build.ui">
         <copy todir="${wolips.ui.dist}">
             <fileset dir="src/wolips-ui">
             	<exclude name="**/java/**"/>
             	<exclude name="**/lib/**"/>
             	<exclude name="**/xdocs/**"/>
             	<exclude name="**/docs/**"/>
             	<exclude name=".project"/>
             	<exclude name=".classpath"/>
             	<exclude name="build.properties"/>
             </fileset>
         </copy>
     <jar jarfile="${wolips.ui.dist}.jar">
     	<fileset dir="${wolips.ui.dist}">
     	</fileset>
     </jar>
          
    </target>
         
         
         
    <!-- ============================================= -->
    <!-- Sets up build and distribution directories.   -->
    <!-- ============================================= -->
    <target name="prepare" depends="defineClasspath" if="wolips.build.ui">
        <mkdir dir="${build}/wolips-ui"/>
        <mkdir dir="${wolips.ui.dist}/lib"/>
    </target>


    <!-- ============================================= -->
    <!-- Deletes temporary files.                      -->
    <!-- ============================================= -->
    <target name="clean">
        <delete dir="${build}/wolips-ui"/>
        <delete dir="${wolips.ui.dist}"/>
    </target>
    
    
    <!-- ============================================= -->
    <!-- Deploys WOLips web site files in a local      -->
    <!-- directory.                                    -->
    <!-- ============================================= -->
    <target name="deploy-web" depends="prepare,site-doc" if="deploy.web"/>
    
    
    <!-- ========================================== -->
    <!-- Builds API documenatation.                 -->
    <!-- ========================================== -->
    <target name="api" depends="prepare" if="wolips.build.ui">
    </target>
    
    
    <target name="doc" depends="prepare" if="wolips.build.ui">
    </target>
    
    <target name="site-doc" depends="prepare" if="wolips.build.ui">
    </target>
</project>
