<?xml version="1.0"?>

<!-- ======================================================== -->
<!--                 WOLips Ant file.                         -->
<!-- ======================================================== -->
<project name="woproject-wolips-support" default="java" basedir=".">

    <!-- ============================================= -->
    <!-- Define CLASSPATH settings.                    -->
    <!-- ============================================= -->
    <target name="defineClasspath">
        <condition property="next.root" value="/System">
            <and>
                <os family="mac" />
                <os family="unix" />
            </and>
        </condition>
        <path id="classpath">
            <fileset dir="${ant.home}/lib">
                <include name="ant.jar"/>
            </fileset>
            <fileset dir="lib">
                <include name="*.jar"/>
	            <include name="eclipse/**/*.jar"/>
            </fileset>
	    <fileset dir="${wolips.dist}">
			<include name="**/wolips.jar"/>
	    </fileset>
            <fileset dir="${wo.woroot}/Library/Frameworks">
                <include name="JavaFoundation.framework/Resources/Java/*.jar"/>
            </fileset>
             <!-- Depends on WOProject core. -->
            <pathelement path="${build}/main"/>
        </path>
    </target>

    <target name="java" depends="prepare">
        <javac srcdir="src/wolips-support/java"
                destdir="${build}/wolips-support"
                deprecation="${compile.deprecation}"
                debug="${compile.debug}"
                optimize="${compile.optimize}">
            <classpath refid="classpath"/>
        </javac>
         
        <jar jarfile="${wolips.support.dist}/lib/wolips-support.jar">
            <fileset dir="${build}/wolips-support"/>
            <fileset dir="src/wolips-support/java">
          	    <include name="**/*.properties"/>
             </fileset>         
            <metainf dir="doc">
                <include name="LICENSE*"/>
            </metainf>
        </jar>
        
    </target>

    <target name="dist" depends="prepare,java,doc,api">
         <!-- Copy source code -->
         <copy todir="${wolips.support.dist}/src">
             <fileset dir="src/wolips-support/java"/>
         </copy>
         
         <copy todir="${wolips.support.dist}">
             <fileset dir="src/wolips-support">
             	<exclude name="**/java/**"/>
             	<exclude name="**/lib/**"/>
             	<exclude name="**/xdocs/**"/>
             	<exclude name="**/docs/**"/>
             	<exclude name=".project"/>
             	<exclude name=".classpath"/>
             </fileset>
         </copy>
         
    </target>
         
         
         
    <!-- ============================================= -->
    <!-- Sets up build and distribution directories.   -->
    <!-- ============================================= -->
    <target name="prepare" depends="defineClasspath">
        <mkdir dir="${build}/wolips-support"/>
        <mkdir dir="${wolips.support.dist}/lib"/>
        <mkdir dir="${wolips.support.dist}/doc/api"/>
    </target>


    <!-- ============================================= -->
    <!-- Deletes temporary files.                      -->
    <!-- ============================================= -->
    <target name="clean">
        <delete dir="${build}/wolips-support"/>
        <delete dir="${wolips.support.dist}"/>
    </target>
    
    
    <!-- ============================================= -->
    <!-- Deploys WOLips web site files in a local      -->
    <!-- directory.                                    -->
    <!-- ============================================= -->
    <target name="deploy-web" depends="prepare,site-doc" if="deploy.web"/>
    
    
    <!-- ========================================== -->
    <!-- Builds API documenatation.                 -->
    <!-- ========================================== -->
    <target name="api" depends="prepare">
        <copy todir="${wolips.support.dist}/doc">
            <fileset dir="doc">
                <include name="**/LICENSE*"/>
            </fileset>
        </copy>

        <javadoc   packagenames="org.objectstyle.wolips.support.*"
                   defaultexcludes="yes"
                   destdir="${wolips.support.dist}/doc/api"
                   author="true"
                   version="true"
                   use="true"
                   windowtitle="WOLips API">

        <classpath refid="classpath"/>
        <sourcepath>
            <pathelement path="src/wolips-support/java"/>
	    </sourcepath>
        <doctitle><![CDATA[<h2>WOLips API Documentation</h2>]]></doctitle>
        <link href="http://developer.java.sun.com/developer/products/xml/docs/api/"/>
        </javadoc>
    </target>
    
    
    <target name="doc" depends="prepare">
        <!-- copy all licenses inclusing ours -->
        <copy todir="${wolips.support.dist}/doc">
            <fileset dir="doc">
               <include name="LICENSE*"/>
            </fileset>
        </copy>

        <taskdef name="anakia" classname="org.apache.velocity.anakia.AnakiaTask">
            <classpath refid="classpath"/>
        </taskdef>
        
       <!-- Build site in Plugin docs directory -->
        <anakia basedir="src/wolips-support/xdocs/wolips-support" destdir="${wolips.support.dist}/doc"
             extension=".html" style="wolips-support.vsl"
             excludes="**/stylesheets/**"
             includes="**/*.xml"
             lastModifiedCheck="true"
             templatePath="src/wolips-support/xdocs/stylesheets">
        </anakia>

        <!-- copy images -->
        <copy todir="${wolips.support.dist}/doc/images/wolips-support" filtering="no">
            <fileset dir="src/wolips-support/xdocs/images">
                <include name="**/*.gif"/>
                <include name="**/*.jpeg"/>
                <include name="**/*.jpg"/>
                <include name="**/*.css"/>
            </fileset>
        </copy>
    </target>
    
    <target name="site-doc" depends="prepare">
        <!-- copy all licenses inclusing ours -->
        <copy todir="${wolips.support.dist}/doc">
            <fileset dir="doc">
               <include name="LICENSE*"/>
            </fileset>
        </copy>

        <taskdef name="anakia" classname="org.apache.velocity.anakia.AnakiaTask">
            <classpath refid="classpath"/>
        </taskdef>

        <anakia basedir="src/wolips-support/xdocs" destdir="${woproject.dist}/doc"
     		extension=".html" style="woproject.vsl"
     		projectFile="../../../xdocs/stylesheets/project.xml"
     		excludes="**/stylesheets/**"
     		includes="**/*.xml"
     		lastModifiedCheck="true"
     		templatePath="xdocs/stylesheets">
		</anakia>

        <!-- copy images -->
        <copy todir="${woproject.dist}/doc/images/wolips-support" filtering="no">
            <fileset dir="src/wolips/xdocs/images">
                <include name="**/*.gif"/>
                <include name="**/*.jpeg"/>
                <include name="**/*.jpg"/>
                <include name="**/*.css"/>
            </fileset>
        </copy>
    </target>
</project>
