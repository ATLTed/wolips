<?xml version="1.0" encoding="UTF-8"?>
<plugin
   id="org.objectstyle.wolips"
   name="WOLips Plug-in"
   version="1.0.0"
   provider-name="objectstyle.org parts Assense Software Solutions GmbH"
   class="org.objectstyle.wolips.WOLipsPlugin">

   <runtime>
      <library name="lib/woproject-wolips.jar">
      	<export name="*"/>
      </library>
   </runtime>
   
   <requires>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.apache.ant"/>
      <import plugin="org.eclipse.ant.core"/>
      <import plugin="org.eclipse.jdt.core"/>
      <import plugin="org.eclipse.jdt.ui"/>
   </requires>

   <!-- help -->
   <extension point="org.eclipse.help.toc">
      <toc
            file="toc.xml"
            primary="true">
      </toc>
   </extension>

 	<!-- Project Wizard -->
	<extension 
		point="org.eclipse.ui.newWizards">
		<category
	   		id = "org.objectstyle.wolips.wizard"
	   		name="%WOLips.categoryName">
		</category>
    	
    	<wizard 
			id="org.objectstyle.wolips.wizard.NewWOFwProjectCreationWizard"
			name="%WOFwProjectCreationWizard.title"
			class="org.objectstyle.wolips.wizard.NewWOFwProjectCreationWizard"
			category="%WOLips.categoryName"
			project="true"
			finalPerspective="org.eclipse.jdt.ui.JavaPerspective"
			icon="icons/full/ctool16/newjprjex_wiz.gif">
			<description>%WOFwProjectCreationWizard.description</description>
    	</wizard>
    	
		<wizard 
			id="org.objectstyle.wolips.wizard.wofw.WOFwProjectCreationWizard"
			name="%WOFwProjectCreationWizard.title"
			class="org.objectstyle.wolips.wizard.wofw.WOFwProjectCreationWizard"
			category="org.objectstyle.wolips.wizard"
			project="true"
			finalPerspective="org.eclipse.jdt.ui.JavaPerspective"
			icon="icons/full/ctool16/newjprjex_wiz.gif"
			banner="icons/full/wizban/newjprjex_wiz.gif">
			<description>%WOFwProjectCreationWizard.description</description>
	    	<projectsetup
        		pagetitle="%WOFwProjectCreationWizard.pagetitle"
        		pagedescription="%WOFwProjectCreationWizard.pagedescription"
         		label="%WOFwProjectCreationWizard.label"
        		name="WOFramework">
           		<nature id="org.eclipse.jdt.core.javanature"/>
           		<import dest="" src="templates/woframework"/>
        	</projectsetup>
      	</wizard>
      	
      	<wizard 
			id="org.objectstyle.wolips.wizard.woapp.WOAppProjectCreationWizard"
			name="%WOAppProjectCreationWizard.title"
			class="org.objectstyle.wolips.wizard.woapp.WOAppProjectCreationWizard"
			category="org.objectstyle.wolips.wizard"
			project="true"
			finalPerspective="org.eclipse.jdt.ui.JavaPerspective"
			icon="icons/full/ctool16/newjprjex_wiz.gif"
			banner="icons/full/wizban/newjprjex_wiz.gif">
			<description>%WOAppProjectCreationWizard.description</description>
	    	<projectsetup
        		pagetitle="%WOAppProjectCreationWizard.pagetitle"
        		pagedescription="%WOAppProjectCreationWizard.pagedescription"
         		label="%WOAppProjectCreationWizard.label"
        		name="WOApplication">
           		<nature id="org.eclipse.jdt.core.javanature"/>
           		<import dest="" src="templates/woapplication"/>
        	</projectsetup>
      	</wizard>	
	</extension>  

	<!-- ant -->
     
	<extension point="org.eclipse.ant.core.extraClasspathEntries">
		<extraClasspathEntry library="lib/woproject.jar">
		</extraClasspathEntry>
		<extraClasspathEntry library="lib/cayenne.jar">
		</extraClasspathEntry>
		<extraClasspathEntry library="lib/log4j-1.2beta4.jar">
		</extraClasspathEntry>
	</extension>
	
   	<extension point="org.eclipse.ant.core.antTasks">
      	<antTask
         	name="woapplication"
         	class="org.objectstyle.woproject.ant.WOApplication"
         	library="lib/woproject.jar">
      	</antTask>
      	
     	<antTask
         	name="woframework"
         	class="org.objectstyle.woproject.ant.WOFramework"
         	library="lib/woproject.jar">
      	</antTask>

      	<antTask
         	name="wogenerator"
         	class="org.objectstyle.woproject.ant.WOGenerator"
         	library="lib/woproject.jar">
      	</antTask>
   	</extension>

<!-- =================================================================================== -->
<!-- Extension: WOFramework Builder                                                      -->
<!-- =================================================================================== -->

<extension 
	point="org.eclipse.core.resources.builders" 
	id="woframeworkbuilder"
	name="%WOFrameworkBuilderName">
	<builder>
		<run class="org.objectstyle.wolips.builder.WOFrameworkBuilder">
		</run>
	</builder>
</extension>

<!-- =================================================================================== -->
<!-- Extension: WOApplication Builder                                                      -->
<!-- =================================================================================== -->

<extension 
	point="org.eclipse.core.resources.builders" 
	id="woapplicationbuilder"
	name="%WOApplicationBuilderName">
	<builder>
		<run class="org.objectstyle.wolips.builder.WOApplicationBuilder">
		</run>
	</builder>
</extension>

<!-- project actions -->
<extension
    point="org.eclipse.ui.popupMenus">
    <objectContribution
        objectClass="org.eclipse.core.resources.IProject"
        adaptable="true">
        <filter
            name="nature"
            value="org.eclipse.jdt.core.javanature">
        </filter>
        <menu
            label="&amp;WOLips"
            path="additions"
            id="org.objectstyle.wolips">
            <separator
                name="wobuilder">
            </separator>
        </menu>
        <action
            label="%WOBuilder.Remove"
            class="org.objectstyle.wolips.actions.WOBuilderAction"
            menubarPath="org.objectstyle.wolips/wobuilder"
            id="%WOBuilder.Remove.ID">
        </action>
        <action
            label="%WOApplicationBuilder.Set"
            class="org.objectstyle.wolips.actions.WOBuilderAction"
            menubarPath="org.objectstyle.wolips/wobuilder"
            id="%WOApplicationBuilder.Set.ID">
        </action>
        <action
            label="%WOFrameworkBuilder.Set"
            class="org.objectstyle.wolips.actions.WOBuilderAction"
            menubarPath="org.objectstyle.wolips/wobuilder"
            id="%WOFrameworkBuilder.Set.ID">
        </action>
	</objectContribution>
</extension>

</plugin>
