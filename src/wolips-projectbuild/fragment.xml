<?xml version="1.0" encoding="UTF-8"?>
<fragment
   id="org.objectstyle.wolips.projectbuild"
   name="%WOLips.projectbuild.fragmentName"
   version="1.0.5"
   provider-name="%WOLips.providerName"
   plugin-id="org.objectstyle.wolips"
   plugin-version="1.0.5"
   match="compatible">

   <runtime>
      <library name="lib/wolips-projectbuild.jar">
         <packages prefixes="org.objectstyle.wolips.projectbuild"/>
      </library>
   </runtime>


<!-- =================================================================================== -->
<!-- Extension: Classpath container                                                                      -->
<!-- =================================================================================== -->
   <extension
         point="org.eclipse.jdt.core.classpathContainerInitializer">
      <classpathContainerInitializer
            class="org.objectstyle.wolips.projectbuild.classpath.WOClasspathContainerInitializer"
            id="org.objectstyle.wolips.WO_CLASSPATH">
      </classpathContainerInitializer>
   </extension>
   <extension
         point="org.eclipse.jdt.core.classpathContainerInitializer">
      <classpathContainerInitializer
            class="org.objectstyle.wolips.projectbuild.classpath.WOClasspathContainerInitializer"
            id="de.thecode.eclipse.wosupport.WO_CLASSPATH">
      </classpathContainerInitializer>
   </extension>
   <extension
         point="org.eclipse.jdt.ui.classpathContainerPage">
      <classpathContainerPage
            name="WebObjects Frameworks"
            class="org.objectstyle.wolips.projectbuild.classpath.WOClassPathContainerPage"
            id="org.objectstyle.wolips.WO_CLASSPATH">
      </classpathContainerPage>
   </extension>
   <extension
         point="org.eclipse.jdt.ui.classpathContainerPage">
      <classpathContainerPage
            name="WO Frameworks (theCo.de)"
            class="org.objectstyle.wolips.projectbuild.classpath.WOClassPathContainerPage"
            id="de.thecode.eclipse.wosupport.WO_CLASSPATH">
      </classpathContainerPage>
   </extension>
   
<!-- =================================================================================== -->
<!-- Extension: WOLips projectbuild problem marker                                       -->
<!-- =================================================================================== -->
   <extension
      	id="projectbuild.marker"
      	name="WOLips Build Marker"
      	point="org.eclipse.core.resources.markers"
   >
      <super type="org.eclipse.core.resources.problemmarker"/>
   </extension>

   <extension
      	id="projectbuild.problem"
      	name="WOLips Build Problem Marker"
      	point="org.eclipse.core.resources.markers"
   >
      <persistent value="true"/>
      <super type="org.objectstyle.wolips.projectbuild.marker"/>
   </extension>

   <extension
      	id="projectbuild.duplicate"
      	name="WOLips Build Duplicate Marker"
      	point="org.eclipse.core.resources.markers"
   >
      <persistent value="true"/>
      <super type="org.objectstyle.wolips.projectbuild.marker"/>
   </extension>

<!-- =================================================================================== -->
<!-- Extension: WOLips projectbuild property page                                                                      -->
<!-- =================================================================================== -->
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            objectClass="org.eclipse.core.resources.IProject"
            adaptable="true"
            name="WOLips build"
            class="org.objectstyle.wolips.projectbuild.natures.ProjectNaturePage"
            id="org.objectstyle.wolips.projectbuild.natures.ProjectNaturePage">
         <filter
               name="nature"
               value="org.eclipse.jdt.core.javanature">
         </filter>
      </page>
   </extension>
<!-- =================================================================================== -->
<!-- Extension: WOGenerator                                                              -->
<!-- =================================================================================== -->
   <extension
         id="wogenerator"
         name="%WOGenerator.Name"
         point="org.eclipse.core.resources.builders">
      <builder>
         <run
               class="org.objectstyle.wolips.projectbuild.builder.WOGenerator">
         </run>
      </builder>
   </extension>
<!-- =================================================================================== -->
<!-- Extension: WOProject Builder                                                      -->
<!-- =================================================================================== -->
   <extension
         id="incrementalbuilder"
         name="%WOIncrementalProjectBuilderName"
         point="org.eclipse.core.resources.builders">
      <builder>
         <run
               class="org.objectstyle.wolips.projectbuild.builder.WOIncrementalBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="antbuilder"
         name="%WOAntBuilderName"
         point="org.eclipse.core.resources.builders">
      <builder>
         <run
               class="org.objectstyle.wolips.projectbuild.builder.WOAntBuilder">
         </run>
      </builder>
   </extension>
<!-- =================================================================================== -->
<!-- Extension: Project Natures                                                          -->
<!-- =================================================================================== -->
   <extension
         id="incrementalframeworknature"
         name="org.objectstyle.wolips.projectbuild.WOIncrementalNature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.objectstyle.wolips.projectbuild.natures.IncrementalNature">
         </run>
      </runtime>
      <requires-nature
            id="org.eclipse.jdt.core.javanature">
      </requires-nature>
   </extension>
   <extension
         id="incrementalapplicationnature"
         name="org.objectstyle.wolips.projectbuild.WOIncrementalNature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.objectstyle.wolips.projectbuild.natures.IncrementalNature">
         </run>
      </runtime>
      <requires-nature
            id="org.eclipse.jdt.core.javanature">
      </requires-nature>
   </extension>
   <extension
         id="antframeworknature"
         name="org.objectstyle.wolips.projectbuild.wolipsantnature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.objectstyle.wolips.projectbuild.natures.AntNature">
         </run>
      </runtime>
      <requires-nature
            id="org.eclipse.jdt.core.javanature">
      </requires-nature>
   </extension>
   <extension
         id="antapplicationnature"
         name="org.objectstyle.wolips.projectbuild.wolipsantnature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.objectstyle.wolips.projectbuild.natures.AntNature">
         </run>
      </runtime>
      <requires-nature
            id="org.eclipse.jdt.core.javanature">
      </requires-nature>
   </extension>
<!-- =================================================================================== -->
<!-- Extension: WOFramework Builder deprecated                                           -->
<!-- =================================================================================== -->
   <extension
         id="woframeworkbuilder"
         name="%WOFrameworkBuilderName"
         point="org.eclipse.core.resources.builders">
      <builder>
         <run
               class="org.objectstyle.wolips.projectbuild.builder.WOFrameworkBuilder">
         </run>
      </builder>
   </extension>
<!-- =================================================================================== -->
<!-- Extension: WOApplication Builder deprecated                                         -->
<!-- =================================================================================== -->
   <extension
         id="woapplicationbuilder"
         name="%WOApplicationBuilderName"
         point="org.eclipse.core.resources.builders">
      <builder>
         <run
               class="org.objectstyle.wolips.projectbuild.builder.WOApplicationBuilder">
         </run>
      </builder>
   </extension>
<!-- =================================================================================== -->
<!-- Extension: Project Natures deprecated                                                         -->
<!-- =================================================================================== -->
   <extension
         id="applicationnature"
         name="org.objectstyle.wolips.applicationnature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.objectstyle.wolips.projectbuild.natures.WOApplicationNature">
         </run>
      </runtime>
      <requires-nature
            id="org.eclipse.jdt.core.javanature">
      </requires-nature>
   </extension>
   <extension
         id="frameworknature"
         name="org.objectstyle.wolips.frameworknature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.objectstyle.wolips.projectbuild.natures.WOFrameworkNature">
         </run>
      </runtime>
      <requires-nature
            id="org.eclipse.jdt.core.javanature">
      </requires-nature>
   </extension>
</fragment>
