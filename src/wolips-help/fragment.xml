<?xml version="1.0" encoding="UTF-8"?>
<fragment
   id="org.objectstyle.wolips.help"
   name="%WOLips.help.fragmentName"
   version="0.9.8"
   provider-name="%WOLips.providerName"
   plugin-id="org.objectstyle.wolips"
   plugin-version="0.9.8"
   match="compatible">

   <runtime>
      <library name="lib/wolips-help.jar">
         <export name="*"/>
         <packages prefixes="org.objectstyle.wolips.help"/>
      </library>
   </runtime>

<!-- ============================================== -->
<!-- Define the main book                           -->
<!-- ============================================== -->

    <extension point="org.eclipse.help.toc">
        <toc file="doc_root/toc_root.xml" primary="true" />
    </extension>

<!-- =============================================== -->
<!-- Link the sections into the book                 -->
<!-- =============================================== -->

       	<extension point="org.eclipse.help.toc">     		
       		<toc file="doc_root/tasks/toc_tasks.xml" />
       		<toc file="doc_root/tips/toc_tips.xml" />
       		<toc file="doc_root/reference/toc_reference.xml" />
       		<toc file="doc_root/programmer/toc_programmer.xml" />
       	</extension>
       	
</fragment>
